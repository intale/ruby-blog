.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", administration_tags_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_administration_tag_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      = "Tag #{@tag.name}"
    .inner
      = form_for @tag, :url => administration_tag_path(@admin), :html => { :class => :form } do |f|
        .group
          =f.label :name
          =f.text_field :name
        .group
          %p
            =f.label "Hide this tag "
            =f.check_box :status
        .group.navform.wat-cf
          %button.button{:type => "submit"}
            = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
            = t("web-app-theme.save", :default => "Save")