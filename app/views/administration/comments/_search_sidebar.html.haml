.block.notice
  %h3 Search
  .comment_search
    = form_for @search, :url => administration_comments_path, :html => {:method => :get} do |f|
      .search_attr
        %p
          = f.label :created_at_gte, "Begin Date "
          = f.date_select :created_at_gte, :default=>5.years.ago
        %p
          = f.label :created_at_lte, "End Date "
          = f.date_select :created_at_lte
      %p
        = f.submit "Search"
        = link_to "Reset",administration_comments_path