%html{:dir => "ltr", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title RubyBlog
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "", :name => "keywords"}/
    %meta{:content => "", :name => "description"}/
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    / main styles
    .main.index
      .main1
        / H E A D E R  start
        .header
          .h-search
            .rel
              = form_for :search, :url => search_path, :method => "GET" do |f|
                #search_up_partial
                  =f.text_field(:request, :class =>'h-field', :value=>"", :size=>'20')
                  =f.submit("",:class => 'h-but')
                  #search_down_partial
                    =f.radio_button"category", "in posts", :checked => true
                    =f.label "In posts"
                    =f.radio_button "category", "in comments"
                    =f.label "In comments"





          %a.logo{:href => "#"}

          / h-menu start
          .h-menu
            %ul
              %li= link_to "Home", root_path
              %li
                %a{:href => "javascript: void(0);"} Contact
              %li
                %a{:href => "javascript: void(0);"} Submit
              %li
                %a{:href => "javascript: void(0);"} About us
          / h-menu end
        / H E A D E R  end
        / C O N T E N T  start
        .content
          = yield
          .right
            %h3 Categories
            .r-menu
              %ul
              - @tags.each do |tag|
                %li= link_to tag.name, tags_path(tag.name)
          / R I G H T
          .clear
        / C O N T E N T  end
    / /main styles
