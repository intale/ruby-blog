!!!
%html{:dir => "ltr", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title RubyBlog
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "", :name => "keywords"}/
    %meta{:content => "", :name => "description"}/
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    / main styles
    .main.index
      .main1
        / H E A D E R  start
        .header
          %a.logo{:href => root_path}

          / h-menu start
          .h-menu
            #menu-elements
              %ul
                %li= link_to "Home", root_path
                %li
                  %a{:href => "javascript: void(0);"} Contact
                %li
                  %a{:href => "javascript: void(0);"} Submit
                %li
                  %a{:href => "javascript: void(0);"} About us
            #search-form
              = form_tag search_path, :method => "GET"
              = text_field_tag :request
              = link_to "Search", "javascript: void(0);", :id => "submit-search"
              = hidden_field_tag :category, "in posts"
            .clear
          / h-menu end
        / H E A D E R  end
        / C O N T E N T  start

        .content
          = yield
          .right
            %h3 Categories
            .r-menu
              %ul
              - @tags.each do |tag|
                %li= link_to tag.name, tags_path(tag.name)
          / R I G H T
          .clear
        / C O N T E N T  end
    / /main styles
    / F O O T E R  start
